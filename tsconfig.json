    "pretty": true,
    "disableSizeLimit": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "es6",
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2017"]
